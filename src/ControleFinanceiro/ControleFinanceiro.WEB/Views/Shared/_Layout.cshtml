@using ControleFinanceiro.CORE.Resources
@using Resources
@using SquishIt.Framework
@using SquishIt.Mvc

<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

        
        @*Verifique os arquivos no Global.asax*@
        @(Bundle.Css().MvcRenderCachedAssetTag("CombinedCSS"))
        @(Bundle.JavaScript().MvcRenderCachedAssetTag("CombinedJS"))
        @(Bundle.JavaScript().MvcRenderCachedAssetTag("CombinedJS2"))
                
        <title>@GlobalsResource.Copyright</title>
    </head>

    <body data-spy="scroll" data-target=".subnav" data-offset="50" data-twttr-rendered="true">
    
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="@URLResources.HomeIndex">@GlobalsResource.ApplicationTitle</a>
                    @Html.Partial("_LogOnStatusPartial")
                    <div class="nav-collapse">
                        @Html.Partial("_UserMenuPartial")
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        
        @Html.Partial("_LogOnPartial")

        <div class="container-fluid">
      
            @RenderBody()
       
            <hr>
            <footer>
                <p>@GlobalsResource.Copyright</p>
            </footer>
        </div>
       
                
    </body>
</html>
